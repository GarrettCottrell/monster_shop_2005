<body>
  <%= form_tag("/register", method: :post) do  %>
    <%= label_tag(:name) %>
    <%= text_field_tag(:name, "#{@new_user.name}") %>

    <%= label_tag(:address) %>
    <%= text_field_tag(:address, "#{@new_user.address}") %>

    <%= label_tag(:city) %>
    <%= text_field_tag(:city, "#{@new_user.city}") %>

    <%= label_tag(:state) %>
    <%= text_field_tag(:state, "#{@new_user.state}") %>

    <%= label_tag(:zip) %>
    <%= text_field_tag(:zip, "#{@new_user.zip}") %>

    <%= label_tag(:email) %>
    <%= text_field_tag(:email, "#{@new_user.email}") %>

    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %>

    <%= label_tag(:confirm_password) %>
    <%= password_field_tag(:password_confirmation) %>

    <%= submit_tag("Register") %>
  <% end %>
</body>
