<%= form_with url: merchant_items_path, model: @item, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :inventory %>
  <%= f.text_field :inventory %>

  <%= f.hidden_field :merchant_id , :value => current_user.merchant.id %>

  <%= f.submit %>
<% end %>