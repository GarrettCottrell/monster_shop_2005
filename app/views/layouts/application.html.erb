<!DOCTYPE html>
<html>
  <head>
    <style>
      p {
        color: white;
      }
    </style>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "Home", "/"%>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" %>
      <%= link_to "Log In", "/login" if current_user.role != 0..2%>
      <%= link_to "Register", "/register" if current_user.role != 0..2%>
      <%= link_to "Profile", "/profile" if current_user.role == 0..2%>
      <%= link_to "Log Out", "/logout", method: :delete if current_user.role == 0..2%>
      <p><%= "Logged in as #{current_user.name}"  %></p>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
