<p><%= link_to "Create Discount", "/merchants/#{@merchant.id}/discount/new" %></p>
<% Discount.all.each do |discount| %>
<h4>Discount ID #<%= discount.id %>: Quantity: <%= discount.quantity %> Percent Discount: <%= discount.percent_discount %></h4>
<p><%= link_to "Update Discount", "/merchants/#{@merchant.id}/discount/#{discount.id}/edit" %></p>
<p><%= link_to "Delete Discount", "/merchants/#{@merchant.id}/discount/#{discount.id}", method: "delete" %></p>
<% end %>
