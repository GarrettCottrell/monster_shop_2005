<h1>Cart</h1>

<% if !@items.empty? %>
<center>
<table class = "cart-items">
  <tr>
    <th>Item</th>
    <th>Sold By</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Discount</th>
    <th>Subtotal</th>
  </tr>
  <% @items.each do |item,quantity| %>
    <tr id= "cart-item-<%=item.id%>">
      <td>
        <p align = "center">
          <span>
            <img align = "center" id="cart-image" src= <%= item.image %>>
            <%=link_to item.name, "/items/#{item.id}" %>
          </span>
        </p>
      </td>
      <td>
        <p align = "center">
          <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}"%>
        </p>
      </td>
      <td>
        <p style="color:black;"><%=number_to_currency(item.price)%></p>
      </td>
      <td>
        <center>
          <p><%=quantity%></p>
          <p><%= button_to "+", "/cart/#{item.id}",params: {'operation' => "add"}, method: :patch %></p>
          <p><%= button_to "-", "/cart/#{item.id}",params: {'operation' => "subtract"}, method: :patch %></p>
          <p><%= link_to "Remove", "/cart/#{item.id}",method: :delete %></p>
        </center>
        </td>
      <td>
      <% if item.merchant.find_discount_quantity(quantity) != [] %>
        <%= item.merchant.find_discount_amount(quantity).percent_discount %>%
        <% end %>
    </td>
      <td>
        <p align = "center">
        <% if item.merchant.find_discount_quantity(quantity) != [] %>
        <p><%=number_to_currency(cart.subtotal_with_discount(item, quantity))%></p>
        <% else %>
        <p><%=number_to_currency(cart.subtotal(item))%></p>
        <% end %>
    </tr>
  <% end %>
</table>
  <p>Total: <%= number_to_currency(cart.total) %></p>
  <p><%= link_to "Empty Cart", "/cart", method: :delete %></p>
  <% if current_user %>
    <p><%= link_to "Checkout", "/orders/new", method: :get %></p>
  <% else %>
    <p style="color:black;">You must <%= link_to "register", "/register" %> or <%= link_to "log in", "/login" %> to checkout</p>
  <% end %>
<% else %>
  <h3 align= "center">Cart is currently empty</h3>
<% end %>
<table>
</center>
